{
	"type": "object",
	"properties": {
		"version": {
			"type": "number",
			"const": 0
		},
		"lastUpdated": {
			"type": "string",
			"format": "date-time"
		},
		"name": {
			"type": "string"
		},
		"config": {
			"type": "object",
			"properties": {
				"formatVersion": {
					"type": "number",
					"const": 0,
					"description": "The version of the library the sprout is targetting"
				},
				"title": {
					"type": "string",
					"description": "The title of the sprout"
				},
				"description": {
					"type": "string",
					"description": "A description of the sprout"
				},
				"allowImages": {
					"type": "boolean",
					"description": "Whether the bot allows images"
				},
				"allowFormatting": {
					"type": "boolean",
					"description": "Whether the bot should return markdown formatting"
				}
			},
			"required": [
				"formatVersion"
			],
			"additionalProperties": false
		},
		"baseInstructions": {
			"type": "string"
		},
		"subInstructions": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"summary": {
						"type": "string"
					},
					"instructions": {
						"type": "string"
					}
				},
				"required": [
					"summary",
					"instructions"
				],
				"additionalProperties": false
			},
			"propertyNames": {
				"pattern": "^[a-zA-Z0-9_-]+$"
			}
		},
		"schemaText": {
			"type": "string"
		},
		"starterState": {
			"type": "object",
			"additionalProperties": {}
		}
	},
	"required": [
		"version",
		"lastUpdated",
		"name",
		"config",
		"baseInstructions",
		"subInstructions",
		"schemaText",
		"starterState"
	],
	"additionalProperties": false,
	"$schema": "http://json-schema.org/draft-07/schema#"
}