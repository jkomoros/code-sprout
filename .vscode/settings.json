{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        //DIRECTORY_LISTING_FILE
        "**/directory.json": true
    },
    "json.schemas": [
        {
            "fileMatch": [
                "/examples/*/sprout.json",
                "/sprouts/*/sprout.json"
            ],
            "url": "/schemas/sprout_config.json"
        },
        {
            "fileMatch": [
                "/examples/*/sprout.compiled.json",
                "/sprouts/*/sprout.compiled.json"
            ],
            "url": "/schemas/compiled_sprout.json"
        },
    ]
}