{
    "name": "code-sprout",
    "license": "Apache-2.0",
    "repository": "jkomoros/code-sprout",
    "type": "module",
    "scripts": {
        "start": "npm run build:local && npm run serve",
        "test": "jest",
        "build": "npm run build:local && npm run build:rollup",
        "build:local": "npm run build:typescript && npm run generate && npm run build:copy",
        "build:typescript": "tsc",
        "build:rollup": "rollup -c",
        "build:copy": "node ./build/tools/copy-assets.js",
        "serve": "npm run serve:typescript & npm run serve:app & npm run serve:generate",
        "serve:typescript": "tsc --watch --preserveWatchOutput",
        "serve:app": "wds --node-resolve --port=8081",
        "serve:generate": "node ./build/tools/watch.js",
        "generate": "npm run generate:sprouts && npm run generate:listings",
        "generate:sprouts": "node ./build/tools/compile-sprouts.js",
        "generate:listings": "node ./build/tools/generate-directory-listings.js",
        "generate:schemas": "node ./build/tools/generate-schemas.js",
        "deploy": "npm run build && firebase deploy"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.12.0",
        "@anthropic-ai/tokenizer": "^0.0.4",
        "chokidar": "^3.5.3",
        "dompurify": "^3.0.6",
        "dotenv": "^16.3.1",
        "enquirer": "^2.4.1",
        "eslint": "^8.56.0",
        "fast-json-patch": "^3.1.1",
        "fflate": "^0.8.1",
        "file-saver": "^2.0.5",
        "firebase-tools": "^13.0.2",
        "gpt-tok": "^0.0.1",
        "lit": "^3.1.0",
        "marked": "^11.1.1",
        "minimatch": "^9.0.3",
        "openai": "^4.24.1",
        "pwa-helpers": "^0.9.1",
        "redux": "^5.0.1",
        "redux-thunk": "^3.1.0",
        "reselect": "^5.0.1",
        "sharp": "^0.33.1",
        "ts-command-line-args": "^2.5.1",
        "zod": "^3.22.4",
        "zod-to-json-schema": "^3.22.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-dynamic-import-vars": "^2.1.2",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@types/dompurify": "^3.0.5",
        "@types/file-saver": "^2.0.7",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@web/dev-server": "^0.4.1",
        "@web/dev-server-rollup": "^0.6.1",
        "eslint-plugin-jest": "^27.6.0",
        "jest": "^29.7.0",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-minify-html-literals": "^1.2.6",
        "rollup-plugin-summary": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^29.1.1",
        "typescript": "^4.7.2"
    }
}
